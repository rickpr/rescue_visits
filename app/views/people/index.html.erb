<p id="notice"><%= notice %></p>

<h1>Listing People</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Attendance</th>
      <th>Baptism</th>
      <th>Confirmation</th>
      <th>Priesthood</th>
      <th>Help</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.category %></td>
        <td><%= person.name %></td>
        <td><%= person.phone %></td>
        <td><%= person.address %></td>
        <td><%= person.age %></td>
        <td><%= person.gender %></td>
        <td><%= person.attendance %></td>
        <td><%= person.baptism %></td>
        <td><%= person.confirmation %></td>
        <td><%= person.priesthood %></td>
        <td><%= person.help %></td>
        <td><%= person.teacher %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

