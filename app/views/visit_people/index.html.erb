<p id="notice"><%= notice %></p>

<h1>Listing Visit People</h1>

<table>
  <thead>
    <tr>
      <th>Visit</th>
      <th>Person</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @visit_people.each do |visit_person| %>
      <tr>
        <td><%= visit_person.visit %></td>
        <td><%= visit_person.person %></td>
        <td><%= link_to 'Show', visit_person %></td>
        <td><%= link_to 'Edit', edit_visit_person_path(visit_person) %></td>
        <td><%= link_to 'Destroy', visit_person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

